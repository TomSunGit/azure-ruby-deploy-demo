source 'https://rubygems.org/'
ruby '~> 2.3.3'
# App Stack
gem 'sinatra', require: 'sinatra/base'
gem 'sinatra-contrib'
gem 'sinatra-initializers'
gem 'sinatra-flash'
gem 'json'
gem 'oauth2'
# Database Stack
gem 'activerecord', '~> 5.1'
gem 'sinatra-activerecord'
gem 'pg'
gem 'httparty'
gem 'puma'

gem 'rake'
gem 'uglifier'
gem 'sassc'
gem 'dotenv'
gem 'pry'
gem 'rb-readline'

# Azure App Insights
gem 'application_insights'

# JS pipeline
gem 'sinatra-asset-pipeline', '~> 2.2.0'

gem 'pkg-config'
gem 'awesome_print'

group :development do
  gem 'annotate'
  gem 'pry-byebug'
  # gem 'pry-debugger'
  gem 'bullet'
end

group :development, :test do
  gem 'rspec', '~> 3.0'
  gem 'rack-test'
  gem 'capybara'
end
